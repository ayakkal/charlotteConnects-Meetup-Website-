<!DOCTYPE html>
<html lang="en">
<head>
 <title>Charlotte Connects</title>
 <meta charset="utf-8">
 <meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" type='text/css' href="../assets/stylesheets/bootstrap.css">
<link rel="stylesheet" type='text/css' href="../assets/stylesheets/style.css">
 <script src="../assets/js/jquery.js"></script>
 <script src="../assets/js/bootstrap.js"></script>
</head>
<body>
  <div class="full">

    <% include ./partials/header %>



    <div class="backgrnd">
      <div class="maincontent1">
         <div class="container-fluid bg-1 pads newconnectionContext">
            <p class="loginerrmessage"></p>
              <% errrs.forEach(error => { %> 
                  <p class="loginerrmessage"><%= "Error at "+error.param +": "+error.msg %></p>
                <% }) %>
                <form action="/editConnection" method="POST">   
                  <input type="hidden" name="connectionID" value="<%= connectionID %>">
                  <div class="form-group">
                    <label for="details">Details:</label>
                    <textarea name="details" id="details" rows="7" cols="124" placeholder="Enter details" name="details"></textarea>
                  </div>
                  <div class="form-group">
                    <label for="where">Where:</label>
                    <input type="text" class="form-control" id="where" placeholder="Enter location" name="where">
                  </div>
                  <div class="form-group">
                    <label class="control-label" for="date">Date</label>
                    <input class="form-control" id="date" name="date" type="date"/>
                  </div>
                  <button type="submit" class="btn btn-default">Update Connection</button> 
              </form>
          </div>
        </div>
      </div>

      <% include ./partials/footer %>


  </div>
</body>
</html>
